{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".", // Ensures base URL for imports
    "paths": {
      "@/*": ["./*"], // Maps "@" to the project root
      "@pages/*": ["./pages/*"] // Maps "@pages" to the "pages" directory
    },
    "plugins": [
      {
        "name": "next" // Ensures proper Next.js plugin usage
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
